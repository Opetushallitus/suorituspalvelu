{
  "compilerOptions": {
    "noImplicitAny": true,
    "noUncheckedIndexedAccess": true,
    "target": "ES2017",
    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "verbatimModuleSyntax": true,
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "paths": {
      "@/*": ["./src/*"]
    },
    "rootDirs": [".", "./.react-router/types"]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "./*.mjs",
    "./*.mts",
    "./.*.mjs",
    ".react-router/types/**/*"
  ],
  "exclude": ["out", "node_modules", "cdk", ".next"]
}
